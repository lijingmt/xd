#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="流光手套";
	unit="副";
picture="18liuguangshoutao";
	desc="\n";
	item_cur_dura=275;
	item_dura=275;
	set_item_type("armor");
	set_item_kind("armor_hand");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_equip_defend(38);
	set_item_canLevel(18);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("yushi");
	set_item_profeLimit("zhuxian");
	set_item_profeLimit("kuangyao");
	set_item_profeLimit("wuyao");
	set_item_profeLimit("yinggui");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(4);
    set_feng_mofa_attack_add(5);
    set_mofa_all_add(2);
    set_dex_add(3);
    set_huo_mofa_attack_add(5);
    name_cn=query_rare_level()+name_cn;
}
