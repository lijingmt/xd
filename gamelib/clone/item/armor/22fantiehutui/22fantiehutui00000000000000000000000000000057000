#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="钒铁护腿";
	unit="条";
picture="22fantiehutui";
	desc="\n";
	item_cur_dura=448;
	item_dura=448;
	set_item_type("armor");
	set_item_kind("armor_thou");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_equip_defend(196);
	set_item_canLevel(22);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("kuangyao");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(2);
    set_huoyan_defend_add(5);
    set_bingshuang_defend_add(7);
    name_cn=query_rare_level()+name_cn;
}
