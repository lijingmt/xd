#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="细银护腕";
	unit="双";
picture="26xiyinhuwan";
	desc="\n";
	item_cur_dura=464;
	item_dura=464;
	set_item_type("armor");
	set_item_kind("armor_waste");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_equip_defend(212);
	set_item_canLevel(26);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("kuangyao");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(3);
    set_bingshuang_defend_add(6);
    set_dex_add(5);
    set_mofa_add(4);
    name_cn=query_rare_level()+name_cn;
}
