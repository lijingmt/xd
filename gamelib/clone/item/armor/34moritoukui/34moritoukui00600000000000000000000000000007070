#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="末日头盔";
	unit="顶";
picture="34moritoukui";
	desc="\n";
	item_cur_dura=584;
	item_dura=584;
	set_item_type("armor");
	set_item_kind("armor_head");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_equip_defend(332);
	set_item_canLevel(34);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("kuangyao");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(3);
    set_dusu_defend_add(7);
    set_think_add(6);
    set_bingshuang_defend_add(7);
    name_cn=query_rare_level()+name_cn;
}
