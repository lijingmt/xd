#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="龙魂战甲";
	unit="件";
picture="46longhunzhanjia";
	desc="\n";
	item_cur_dura=744;
	item_dura=744;
	set_item_type("armor");
	set_item_kind("armor_cloth");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_equip_defend(492);
	set_item_canLevel(46);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("kuangyao");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(3);
    set_huoyan_defend_add(11);
    set_dex_add(9);
    set_think_add(9);
    name_cn=query_rare_level()+name_cn;
}
