#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="妖灵外衣";
	unit="件";
picture="46yaolingwaiyi";
	desc="\n";
	item_cur_dura=598;
	item_dura=598;
	set_item_type("armor");
	set_item_kind("armor_cloth");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_equip_defend(260);
	set_item_canLevel(46);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("zhuxian");
	set_item_profeLimit("kuangyao");
	set_item_profeLimit("yinggui");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(6);
    set_defend_add(10);
    set_bingshuang_defend_add(21);
    set_dex_add(19);
    set_dusu_defend_add(21);
    set_think_add(10);
    set_huoyan_defend_add(23);
    name_cn=query_rare_level()+name_cn;
}
