#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="冰火布履";
	unit="双";
	picture="54binghuobulv";
	desc="\n";
	item_cur_dura=1500;
	item_dura=1500;
	set_item_type("armor");
	set_item_kind("armor_shoes");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
    set_equip_defend(160);
    set_item_canLevel(58);
	set_item_profeLimit("yushi");
	set_item_profeLimit("wuyao");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(3);
    set_mofa_add(14);
    set_dodge_add(2);
    set_huo_mofa_attack_add(29);
    name_cn=query_rare_level()+name_cn;
}
