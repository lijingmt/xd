#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="冰火法袍 ";
	unit="件";
	picture="54binghuofapao";
	desc="\n";
	item_cur_dura=1500;
	item_dura=1500;
	set_item_type("armor");
	set_item_kind("armor_cloth");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
    set_equip_defend(183);
    set_item_canLevel(57);
	set_item_profeLimit("yushi");
	set_item_profeLimit("wuyao");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(5);
    set_dex_add(24);
    set_think_add(22);
    set_huo_mofa_attack_add(26);
    set_mofa_all_add(13);
    set_fengren_defend_add(14);
    name_cn=query_rare_level()+name_cn;
}
