#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="煞星布手";
	unit="副";
	picture="60shaxingbushou";
	desc="\n";
	item_cur_dura=1700;
	item_dura=1700;
	set_item_type("armor");
	set_item_kind("armor_hand");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_equip_defend(192);
	set_item_canLevel(60);
	set_item_profeLimit("yushi");
	set_item_profeLimit("wuyao");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(6);
    set_defend_add(16);
    set_huoyan_defend_add(23);
    set_dex_add(21);
    set_feng_mofa_attack_add(29);
    set_dusu_defend_add(17);
    set_bing_mofa_attack_add(25);
    name_cn=query_rare_level()+name_cn;
}
