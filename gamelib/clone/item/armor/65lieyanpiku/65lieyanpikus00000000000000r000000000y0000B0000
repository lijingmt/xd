#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="烈焰皮裤";
	unit="条";
	picture="65lieyanpiku";
	desc="\n";
	item_cur_dura=1800;
	item_dura=1800;
	set_item_type("armor");
	set_item_kind("armor_thou");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
    set_equip_defend(375);
    set_item_canLevel(67);
	set_item_profeLimit("zhuxian");
	set_item_profeLimit("yinggui");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(4);
    set_huoyan_defend_add(37);
    set_life_add(27);
    set_str_add(28);
    set_attack_huoyan_add(34);
    name_cn=query_rare_level()+name_cn;
}
