#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="紫祥头饰";
	unit="顶";
	picture="65zixiangtoushi";
	desc="\n";
	item_cur_dura=1800;
	item_dura=1800;
	set_item_type("armor");
	set_item_kind("armor_head");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
    set_equip_defend(216);
    set_item_canLevel(69);
	set_item_profeLimit("yushi");
	set_item_profeLimit("wuyao");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(3);
    set_think_add(35);
    set_fengren_defend_add(28);
    set_huo_mofa_attack_add(35);
    name_cn=query_rare_level()+name_cn;
}
