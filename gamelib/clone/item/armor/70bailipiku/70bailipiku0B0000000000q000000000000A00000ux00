#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="白栗皮裤";
	unit="条";
	picture="70bailipiku";
	desc="\n";
	item_cur_dura=1900;
	item_dura=1900;
	set_item_type("armor");
	set_item_kind("armor_thou");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_equip_defend(392);
	set_item_canLevel(70);
	set_item_profeLimit("zhuxian");
	set_item_profeLimit("yinggui");
	set_aocao_max("red",1);
	set_aocao_max("yellow",2);
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(5);
    set_defend_add(26);
    set_fengren_defend_add(33);
    set_dex_add(37);
    set_bingshuang_defend_add(30);
    set_attack_huoyan_add(36);
    name_cn=query_rare_level()+name_cn;
}
