#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="天渊战靴";
	unit="双";
	picture="70tiangangzhanxue";
	desc="\n";
	item_cur_dura=1900;
	item_dura=1900;
	set_item_type("armor");
	set_item_kind("armor_shoes");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
    set_equip_defend(630);
    set_item_canLevel(101);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("kuangyao");
	set_aocao_max("red",1);
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(1);
    set_dusu_defend_add(25);
    name_cn=query_rare_level()+name_cn;
}
