#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_BAOSHI;
void create(){
	name=object_name(this_object());
	name_cn="【晶】黄水玉";
	unit="颗";
	picture="jinghuangshuiyu";
	desc="增加防御力500点\n增加全法术抗性300点\n";
	set_color("yellow");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_value(50);
	set_item_canLevel(50);
	set_defend_add(50);
	set_all_mofa_defend_add(300);//增加全法术抗性30
	set_item_kind("pusu");
}
