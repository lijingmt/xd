#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_BAOSHI;
void create(){
	name=object_name(this_object());
	name_cn="【雪】晶铁石";
	unit="颗";
	picture="xuejingtieshi";
	desc="每秒回血增加1点\n";
	set_color("red");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_value(50);
	set_item_canLevel(50);
	set_rase_life_add(1);
	set_item_kind("pusu");
}
