	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_value(150);
	set_item_canLevel(60);
	set_hitte_add(2);
	set_item_kind("shanliang");
}
