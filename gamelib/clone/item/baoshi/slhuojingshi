#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_BAOSHI;
void create(){
	name=object_name(this_object());
	name_cn="闪亮火晶石";
	unit="颗";
	picture="slhuojingshi";
	desc="增加全系物理伤害20点\n";
	set_color("red");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_value(150);
	set_item_canLevel(60);
	set_attack_all_add(20);
	set_item_kind("shanliang");
}
