#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_BOOK;
void create(){
	name=object_name(this_object());
	name_cn="【仙】静心决五级";
	unit="本";
	picture=name;
	desc="静心情修，可增加本身的智慧程度\n";
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	value=50;
	skill_bname="jingxinjue";
	level_limit=31;
	profe_read_limit="羽士";
	beidong_level=5;
}
int read(){
	int result=::beidong_read();
	if(read_flag==0){
		remove();
	}
	return result;
}
