#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_BOOK;
void create(){
	name=object_name(this_object());
	name_cn="【斩】切云斩";
	unit="本";
	picture=name;
	desc="直接对敌人造成伤害的攻击技能\n";
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	value=50;
	skill_bname="qieyunzhan";
	level_limit=1;
	profe_read_limit="剑仙";
}
int read(){
	int result=::read();
	if(read_flag==0){
		remove();
	}
	return result;
}
