#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_BOOK;
void create(){
	name=object_name(this_object());
	name_cn="【伤】撕裂";
	unit="本";
	picture=name;
	desc="割裂敌人，使对方在10秒内持续受到伤害，持续对敌人造成伤害的技能\n";
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	value=50;
	skill_bname="silie";
	level_limit=1;
	profe_read_limit="狂妖";
}
int read(){
	int result=::read();
	if(read_flag==0){
		remove();
	}
	return result;
}
