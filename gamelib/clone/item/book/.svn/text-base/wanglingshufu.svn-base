#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_BOOK;
void create(){
	name=object_name(this_object());
	name_cn="【诅】亡魂束缚";
	unit="本";
	picture=name;
	desc="散发鬼魂之煞气，降低敌人的防御力\n";
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	value=50;
	skill_bname="wanglingshufu";
	level_limit=44;
	profe_read_limit="影鬼";
}
int read(){
	int result=::read();
	if(read_flag==0){
		remove();
	}
	return result;
}
