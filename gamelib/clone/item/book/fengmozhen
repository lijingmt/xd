#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_BOOK;
void create(){
	name=object_name(this_object());
	name_cn="【仙】封魔阵";
	unit="本";
	picture=name;
	desc="封印敌人的能力，降低对方的爆击率\n";
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	value=50;
	skill_bname="fengmozhen";
	level_limit=44;
	profe_read_limit="诛仙";
}
int read(){
	int result=::read();
	if(read_flag==0){
		remove();
	}
	return result;
}
