#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_BOOK;
void create(){
	name=object_name(this_object());
	name_cn="【术】幻影残像三级";
	unit="本";
	picture=name;
	desc="可以极大强化自身敏捷性的技能\n";
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	value=50;
	skill_bname="huanyingcanxiang";
	level_limit=35;
	profe_read_limit="影鬼";
	beidong_level=3;
}
int read(){
	int result=::beidong_read();
	if(read_flag==0){
		remove();
	}
	return result;
}
