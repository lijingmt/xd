#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_BOOK;
void create(){
	name=object_name(this_object());
	name_cn="【妖】狂化四级";
	unit="本";
	picture=name;
	desc="狂妖的特性技能，可以极大的发挥自己的潜力，增加力量\n";
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	value=50;
	skill_bname="kuanghua";
	level_limit=38;
	profe_read_limit="狂妖";
	beidong_level=4;
}
int read(){
	int result=::beidong_read();
	if(read_flag==0){
		remove();
	}
	return result;
}
