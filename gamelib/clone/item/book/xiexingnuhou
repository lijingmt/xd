#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_BOOK;
void create(){
	name=object_name(this_object());
	name_cn="【妖】血腥怒吼";
	unit="本";
	picture=name;
	desc="用震天的怒吼恐吓敌人，降低对方的闪避率\n";
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	value=50;
	skill_bname="xiexingnuhou";
	level_limit=39;
	profe_read_limit="狂妖";
}
int read(){
	int result=::read();
	if(read_flag==0){
		remove();
	}
	return result;
}
