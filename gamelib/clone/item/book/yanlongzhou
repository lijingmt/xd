#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_BOOK;
void create(){
	name=object_name(this_object());
	name_cn="【咒】炎龙咒";
	unit="本";
	picture=name;
	desc="威力无穷的仙法，召唤巨大的炎龙攻击敌人，直接造成伤害的攻击技能\n";
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	value=50;
	skill_bname="yanlongzhou";
	level_limit=44;
	profe_read_limit="羽士";
}
int read(){
	int result=::read();
	if(read_flag==0){
		remove();
	}
	return result;
}
