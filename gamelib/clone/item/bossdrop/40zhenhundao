#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="【霸】镇魂刀";
	unit="把";
	picture=name;
	desc="\n";
	item_cur_dura=1000;
	item_dura=1000;
	set_item_type("double_weapon");
	set_item_weapon_type("dao");
	set_item_kind("double_main_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(0);
	set_item_canSend(0);
	set_item_canStorage(1);
	set_attack_power(210);
	set_attack_power_limit(260);
	set_speed_power(4);
	set_item_canLevel(40);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("kuangyao");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
	set_str_add(20);
	set_think_add(10);
	set_weapon_attack_add(5);
}
