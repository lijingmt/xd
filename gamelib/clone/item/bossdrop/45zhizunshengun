#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="【霸】至尊神棍";
	unit="把";
	picture=name;
	desc="\n";
	item_cur_dura=1300;
	item_dura=1300;
	set_item_type("single_weapon");
	set_item_weapon_type("gun");
	set_item_kind("single_main_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(0);
	set_item_canSend(0);
	set_item_canStorage(1);
	set_attack_power(80);
	set_attack_power_limit(120);
	set_speed_power(2);
	set_item_canLevel(45);
	set_item_profeLimit("yushi");
	set_item_profeLimit("wuyao");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
	set_str_add(26);
	set_think_add(42);
	set_doub_add(3);
	set_hitte_add(3);
	set_mofa_all_add(70);
}
