#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_DECORATE;
void create(){
	name=object_name(this_object());
	name_cn="梅心披风";
	unit="件";
	picture="60meixinpifeng";
	desc="\n";
	item_cur_dura=10000;
	item_dura=10000;
	set_item_type("decorate");
	set_item_kind("decorate_manteau");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_item_canLevel(60);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("yushi");
	set_item_profeLimit("zhuxian");
	set_item_profeLimit("kuangyao");
	set_item_profeLimit("wuyao");
	set_item_profeLimit("yinggui");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(7);
    set_bing_mofa_attack_add(16);
    set_hitte_add(5);
    set_huoyan_defend_add(26);
    set_attack_bingshuang_add(25);
    set_life_add(16);
    set_rase_mofa_add(3);
    set_rase_life_add(3);
    name_cn=query_rare_level()+name_cn;
}
