#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_COMBINE_ITEM;
void create(){
	name=object_name(this_object());
	name_cn="小铜锤";
	unit="把";
	desc="铜制小号锤子，有很强的破坏力\n坚固度：900\n";
	value=900;
	amount=1;
	picture=name;
	set_item_canEquip(0);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_item_type("hammer");
}
