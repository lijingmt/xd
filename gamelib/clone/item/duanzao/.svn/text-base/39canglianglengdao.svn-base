	picture=name;
	desc="\n";
	item_cur_dura=800;
	item_dura=800;
	set_item_type("single_weapon");
	set_item_weapon_type("dao");
	set_item_kind("single_main_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_attack_power(70);
	set_attack_power_limit(90);
	set_speed_power(4);
	set_item_canLevel(39);
	set_item_profeLimit("yushi");
	set_item_profeLimit("wuyao");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
