#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="【宝】诛仙剑";
	unit="把";
	picture=name;
	desc="通天教主所有的四把神剑之一，用以布置诛仙剑阵的神器\n";
	item_cur_dura=1000;
	item_dura=1000;
	set_item_type("single_weapon");
	set_item_weapon_type("jian");
	set_item_kind("single_main_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_attack_power(160);
	set_attack_power_limit(200);
	set_speed_power(3);
	set_item_canLevel(50);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("yushi");
	set_item_profeLimit("zhuxian");
	set_item_profeLimit("kuangyao");
	set_item_profeLimit("wuyao");
	set_item_profeLimit("yinggui");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
	set_str_add(10);
	set_dex_add(28);
	set_think_add(10);
	set_weapon_attack_add(4);
	set_item_from("duanzao");
}
