#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="【熔】结风护手";
	unit="双";
	picture=name;
	desc="\n";
	item_cur_dura=550;
	item_dura=550;
	set_item_type("armor");
	set_item_kind("armor_hand");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_equip_defend(240);
	set_item_canLevel(25);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("kuangyao");
	set_str_add(8);
	set_dex_add(4);
	set_think_add(4);
	set_hitte_add(1);
	set_defend_add(1);
	set_dusu_defend_add(3);
	set_item_from("duanzao");
}
