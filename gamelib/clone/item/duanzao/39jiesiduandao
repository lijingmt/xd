#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="【炼】截丝短刀";
	unit="把";
	picture=name;
	desc="\n";
	item_cur_dura=800;
	item_dura=800;
	set_item_type("single_weapon");
	set_item_weapon_type("dao");
	set_item_kind("single_other_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_attack_power(70);
	set_attack_power_limit(90);
	set_speed_power(2);
	set_item_canLevel(39);
	set_item_profeLimit("zhuxian");
	set_item_profeLimit("yinggui");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
	set_dex_add(13);
	set_think_add(4);
	set_hitte_add(2);
	set_attack_add(25);
	set_weapon_attack_add(4);
	set_life_add(6);
	set_item_from("duanzao");
}
