#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="【化】翰龙血双刀";
	unit="把";
	picture=name;
	desc="\n";
	item_cur_dura=1700;
	item_dura=1700;
	set_item_type("double_weapon");
	set_item_weapon_type("dao");
	set_item_kind("double_main_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_attack_power(285);
	set_attack_power_limit(320);
	set_speed_power(4);
	set_item_canLevel(65);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("kuangyao");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
	set_str_add(35);
	set_hitte_add(2);
	set_weapon_attack_add(5);
	set_attack_bingshuang_add(30);
	set_attack_fengren_add(30);
	set_attack_dusu_add(30);
	set_item_from("duanzao");
	set_aocao_max("red",2);
	set_renxing(13);
}
