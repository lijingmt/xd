#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ARMOR;
void create(){
	name=object_name(this_object());
	name_cn="【熔】和甫圣人金盔";
	unit="副";
	picture=name;
	desc="\n";
	item_cur_dura=1800;
	item_dura=1800;
	set_item_type("armor");
	set_item_kind("armor_head");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_equip_defend(595);
	set_item_canLevel(68);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("kuangyao");
	set_str_add(38);
	set_dex_add(31);
	set_doub_add(3);
	set_defend_add(25);
	set_life_add(29);
	set_fengren_defend_add(30);
	set_item_from("duanzao");
	set_aocao_max("red",1);
	set_renxing(25);
}
