#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="【炼】天地魂冷血刀";
	unit="把";
	picture=name;
	desc="\n";
	item_cur_dura=1800;
	item_dura=1800;
	set_item_type("single_weapon");
	set_item_weapon_type("dao");
	set_item_kind("single_main_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_attack_power(211);
	set_attack_power_limit(251);
	set_speed_power(3);
	set_item_canLevel(70);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("zhuxian");
	set_item_profeLimit("kuangyao");
	set_item_profeLimit("yinggui");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
	set_str_add(32);
	set_dex_add(40);
	set_doub_add(2);
	set_hitte_add(3);
	set_weapon_attack_add(5);
	set_attack_dusu_add(35);
	set_item_from("duanzao");
	set_aocao_max("red",1);
	set_renxing(10);
}
