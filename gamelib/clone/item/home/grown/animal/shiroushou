#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_LIFE;
void create(){
	name=object_name(this_object());
	name_cn="食肉兽";
	unit="只";
	picture=name;
	desc="已经渐渐长出绒毛，看样子很健康";
	set_item_canDrop(1);
	set_item_canGet(0);
	set_item_canTrade(0);
	set_item_canSend(0);
	set_item_canStorage(0);
	value=100;
	set_item_type("home_grown_animal");
	set_final_life(5000);
	set_heart_beat(1);
	set_grow_speed(230);
	desc += "成熟度:" + query_current_life() + "/" + query_final_life()+"\n";
}