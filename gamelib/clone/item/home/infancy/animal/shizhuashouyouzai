#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_INFANCY;
void create(){
	name=object_name(this_object());
	name_cn="石爪兽幼仔";
	unit="只";
	picture=name;
	desc="这家伙真漂亮，一定能长成一只大石爪兽";
	amount=1;
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	value=100;
	set_item_type("home_infancy_animal");
	set_grownItem_path("home/grown/animal/shizhuashou");
	set_harvest_desc("可得到石爪兽幼仔，黄麻布，短毛皮，亚麻布，针毛皮");
	homeLevel_limit = 1;
}