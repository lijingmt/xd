#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_INFANCY;
void create(){
	name=object_name(this_object());
	name_cn="钛金矿之源";
	unit="块";
	picture=name;
	desc="银灿灿的一团，可以在你的家中汇聚出一处晶钛金矿矿";
	amount=1;
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	value=100;
	set_item_type("home_infancy_ore");
	set_grownItem_path("home/grown/ore/jingtaijinkuang");
	set_harvest_desc("可得到钛金矿之源，钛金矿石，晶钛金，青月石");
	homeLevel_limit = 2;
}