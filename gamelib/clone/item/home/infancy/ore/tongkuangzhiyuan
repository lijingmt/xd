#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_INFANCY;
void create(){
	name=object_name(this_object());
	name_cn="铜矿之源";
	unit="块";
	picture=name;
	desc="黄灿灿的一团，可以在你的家中汇聚出一处青铜矿";
	amount=1;
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	value=100;
	set_item_type("home_infancy_ore");
	set_grownItem_path("home/grown/ore/qingtongkuang");
	set_harvest_desc("可以得到铜矿之源、铜矿、青铜、黄水玉");
	homeLevel_limit = 1;
}