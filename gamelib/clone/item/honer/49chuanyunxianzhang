#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="【仙】穿云仙杖";
	unit="把";
	picture=name;
	desc="\n";
	item_cur_dura=1500;
	item_dura=1500;
	set_item_type("single_weapon");
	set_item_weapon_type("zhang");
	set_item_kind("single_main_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(0);
	set_item_canSend(0);
	set_item_canStorage(1);
	set_attack_power(100);
	set_attack_power_limit(130);
	set_speed_power(2);
	set_item_canLevel(49);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("yushi");
	set_item_profeLimit("zhuxian");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
	set_str_add(25);
	set_think_add(48);
	set_doub_add(3);
	set_hitte_add(3);
	set_mofa_all_add(75);
	set_item_from("honer");
	set_need_honer(180000);
}
