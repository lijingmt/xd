#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_DANYAO;
void create(){
	name=object_name(this_object());
	name_cn="【灵仙】玉琼浆";
	unit="颗";
	desc="增加生命上限4000，持续30分钟\n";
	set_danyao_kind("attri_defend");
	set_danyao_type("life_max");
	set_effect_value(4000);
	set_danyao_timedelay(1800);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_item_level(50);
}
