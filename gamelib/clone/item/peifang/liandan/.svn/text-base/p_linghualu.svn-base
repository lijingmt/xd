#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_BOOK;
void create(){
	name=object_name(this_object());
	name_cn="【配方】灵华露";
	unit="本";
	picture=name;
	desc="上面记载了灵华露的制造方法\n";
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_peifang_kind("liandan");
	set_peifang_type("normal");
	peifang_id=71;
	level_limit=40;
	viceskill_level=120;
}
int read(){
	int result=::liandan_read();
	if(read_flag==0){
		remove();
	}
	return result;
}
