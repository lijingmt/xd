#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_BOOK;
void create(){
	name=object_name(this_object());
	name_cn="【配方】再生丹";
	unit="本";
	picture=name;
	desc="上面记载了再生丹的制造方法\n";
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_peifang_kind("liandan");
	set_peifang_type("attri_defend");
	peifang_id=31;
	level_limit=20;
	viceskill_level=60;
}
int read(){
	int result=::liandan_read();
	if(read_flag==0){
		remove();
	}
	return result;
}
