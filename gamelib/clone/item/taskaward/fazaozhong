#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_DECORATE;
void create(){
	name=object_name(this_object());
	name_cn="【宝】发燥钟";
	unit="个";
	picture=name;
	desc="一种被施过妖法的摇铃，使人焦躁，无发战斗\n";
	item_cur_dura=1000;
	item_dura=1000;
	set_item_type("decorate");
	set_item_kind("decorate_thing");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(0);
	set_item_canSend(0);
	set_item_canStorage(1);
	set_item_canLevel(20);
	set_item_profeLimit("yushi");
	set_think_add(5);
	set_hitte_add(1);
	set_lunck_add(1);
	set_mofa_add(5);
	set_rase_mofa_add(1);
	set_mofa_all_add(12);
	set_item_from("task");
}
