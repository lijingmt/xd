#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_DECORATE;
void create(){
	name=object_name(this_object());
	name_cn="【宝】玲珑七窍心";
	unit="个";
	picture=name;
	desc="一般人心为二心房、二心室，曰四窍；玲珑心却有七窍\n";
	item_cur_dura=1000;
	item_dura=1000;
	set_item_type("decorate");
	set_item_kind("decorate_thing");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(0);
	set_item_canSend(0);
	set_item_canStorage(1);
	set_item_canLevel(20);
	set_item_profeLimit("jianxian");
	set_str_add(5);
	set_doub_add(1);
	set_lunck_add(1);
	set_life_add(5);
	set_rase_life_add(1);
	set_item_from("task");
}
