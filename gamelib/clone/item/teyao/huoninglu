#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_DANYAO;
void create(){
	name=object_name(this_object());
	name_cn="火宁露";
	unit="瓶";
	desc="增加火焰抗性80点，持续30分钟，下线后效果不消失\n";
	set_danyao_kind("te_defend");
	set_danyao_type("huoyan_defend");
	set_effect_value(80);
	set_danyao_timedelay(1800);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_item_level(1);
}
