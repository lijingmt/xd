#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="莫邪";
	unit="把";
picture="49moxie";
	desc="\n";
	item_cur_dura=460;
	item_dura=460;
	set_item_type("single_weapon");
	set_item_weapon_type("jian");
	set_item_kind("single_other_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_attack_power(66);
	set_attack_power_limit(71);
	set_speed_power(2);
	set_item_canLevel(49);
	set_item_profeLimit("zhuxian");
	set_item_profeLimit("yinggui");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(4);
    set_attack_fengren_add(14);
    set_hitte_add(2);
    set_attack_bingshuang_add(14);
    set_weapon_attack_add(4);
    name_cn=query_rare_level()+name_cn;
}
