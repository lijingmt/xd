#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="神剑赤霄";
	unit="把";
picture="49shenjianchixiao";
	desc="\n";
	item_cur_dura=500;
	item_dura=500;
	set_item_type("double_weapon");
	set_item_weapon_type("jian");
	set_item_kind("double_main_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_attack_power(200);
	set_attack_power_limit(215);
	set_speed_power(4);
	set_item_canLevel(49);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("kuangyao");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(3);
    set_attack_huoyan_add(15);
    set_attack_dusu_add(15);
    set_str_add(12);
    name_cn=query_rare_level()+name_cn;
}
