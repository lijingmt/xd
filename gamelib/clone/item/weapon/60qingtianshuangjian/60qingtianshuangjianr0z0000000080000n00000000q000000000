#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="擎天双剑";
	unit="对";
	picture="60qingtianshuangjian";
	desc="\n";
	item_cur_dura=1700;
	item_dura=1700;
	set_item_type("double_weapon");
	set_item_weapon_type("jian");
	set_item_kind("double_main_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
    set_attack_power(313);
	set_attack_power_limit(330);
	set_speed_power(4);
    set_item_canLevel(62);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("kuangyao");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(5);
    set_mofa_add(23);
    set_think_add(35);
    set_attack_huoyan_add(26);
    set_str_add(27);
    set_weapon_attack_add(8);
    name_cn=query_rare_level()+name_cn;
}
