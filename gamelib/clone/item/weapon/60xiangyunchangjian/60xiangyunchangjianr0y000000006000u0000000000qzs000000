#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="翔云长剑";
	unit="把";
	picture="60xiangyunchangjian";
	desc="\n";
	item_cur_dura=1700;
	item_dura=1700;
	set_item_type("single_weapon");
	set_item_weapon_type("jian");
	set_item_kind("single_main_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_attack_power(210);
	set_attack_power_limit(245);
	set_speed_power(3);
	set_item_canLevel(60);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("zhuxian");
	set_item_profeLimit("kuangyao");
	set_item_profeLimit("yinggui");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(7);
    set_attack_dusu_add(28);
    set_str_add(27);
    set_life_add(30);
    set_attack_fengren_add(35);
    set_think_add(34);
    set_attack_bingshuang_add(26);
    set_weapon_attack_add(6);
    name_cn=query_rare_level()+name_cn;
}
