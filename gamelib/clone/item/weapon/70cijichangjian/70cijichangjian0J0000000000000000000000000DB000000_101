#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="刺脊长剑";
	unit="把";
	picture="70cijichangjian";
	desc="\n";
	item_cur_dura=1900;
	item_dura=1900;
	set_item_type("single_weapon");
	set_item_weapon_type("jian");
	set_item_kind("single_main_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
    set_attack_power(307);
	set_attack_power_limit(300);
	set_speed_power(3);
    set_item_canLevel(101);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("zhuxian");
	set_item_profeLimit("kuangyao");
	set_item_profeLimit("yinggui");
	set_aocao_max("red",1);
	set_aocao_max("yellow",1);
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(3);
    set_attack_dusu_add(37);
    set_dex_add(45);
    set_attack_fengren_add(39);
    name_cn=query_rare_level()+name_cn;
}
