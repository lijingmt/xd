#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="蛇灵杖";
	unit="把";
	picture="70shelingzhang";
	desc="\n";
	item_cur_dura=1900;
	item_dura=1900;
	set_item_type("single_weapon");
	set_item_weapon_type("zhang");
	set_item_kind("single_main_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
    set_attack_power(207);
	set_attack_power_limit(235);
	set_speed_power(2);
    set_item_canLevel(77);
	set_item_profeLimit("yushi");
	set_item_profeLimit("wuyao");
	set_aocao_max("yellow",1);
	set_aocao_max("blue",2);
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(4);
    set_think_add(38);
    set_str_add(39);
    set_dex_add(43);
    set_attack_add(37);
    name_cn=query_rare_level()+name_cn;
}
