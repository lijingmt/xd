#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="羊角匕首";
	unit="把";
picture="9yangjiaobishou";
	desc="\n";
	item_cur_dura=260;
	item_dura=260;
	set_item_type("single_weapon");
	set_item_weapon_type("bi");
	set_item_kind("single_other_weapon");
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_attack_power(16);
	set_attack_power_limit(21);
	set_speed_power(2);
	set_item_canLevel(9);
	set_item_profeLimit("zhuxian");
	set_item_profeLimit("yinggui");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
    set_item_rareLevel(4);
    set_life_add(3);
    set_weapon_attack_add(3);
    set_str_add(3);
    set_attack_add(3);
    name_cn=query_rare_level()+name_cn;
}
