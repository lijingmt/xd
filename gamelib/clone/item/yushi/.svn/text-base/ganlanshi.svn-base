//用于清空武器转化次数的特殊玉石。
#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_COMBINE_ITEM;
void create(){
	name=object_name(this_object());
	name_cn="橄榄石";
	unit="个";
	desc="这块坚硬的石头看起来还真有点像橄榄，你应该不会想吃他吧？能略微提升熔炼成功几率\n";
	amount=1;
	picture=name;
	set_item_canEquip(0);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
}
