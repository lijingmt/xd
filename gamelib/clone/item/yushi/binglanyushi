//用于清空武器转化次数的特殊玉石。
#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_COMBINE_ITEM;
void create(){
	name=object_name(this_object());
	name_cn="冰蓝玉石";
	unit="个";
	desc="来自蔚蓝的大海，凝聚海水之精华，剔透晶莹。能提高炼化中增加属性成功的几率至100%\n";
	amount=1;
	picture=name;
	set_item_canEquip(0);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
}
