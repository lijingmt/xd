//用于清空武器转化次数的特殊玉石。
#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_COMBINE_ITEM;
void create(){
	name=object_name(this_object());
	name_cn="翠晶石";
	unit="个";
	desc="中心似乎还有液体在缓缓地流动。有80%几率使得【优良】装备转化成【精制】装备。\n";
	amount=1;
	picture=name;
	set_item_canEquip(0);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
}
