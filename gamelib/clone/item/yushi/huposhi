//用于清空武器转化次数的特殊玉石。
#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_COMBINE_ITEM;
void create(){
	name=object_name(this_object());
	name_cn="琥珀石";
	unit="个";
	desc="里面还有一只倒霉的小虫子。有80%几率使无附加属性的装备转化成【优良】装备\n";
	amount=1;
	picture=name;
	set_item_canEquip(0);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(1);
	set_item_canSend(1);
	set_item_canStorage(1);
}
