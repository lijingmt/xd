#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit GAMELIB_NPC;
void create(){
	name=object_name(this_object());
	_boss=1;
	_flushtime=3600;
	name_cn="阎罗王";
	desc="冥府十殿阎罗之首，掌管天下万物死路转生之道\n";
	set_raceId("third");
	set_profeId("humanlike");
	picture="yanluowang";
	_npcLevel=36;
	set_base_think(100);
	set_base_dex(100);
	set_base_str(150);
	set_base_life(80000);
	this_object()->query_life_max();
	set_base_baoji(10);
	set_base_hitte(100);
	set_base_dodge(10);
	array(string) equip_list=({"bossdrop/29heiritoukui","bossdrop/29heirikujia","bossdrop/29heirizhongjia",});
	foreach(equip_list,string equip){
		object ob=clone(ITEM_PATH+equip);
		if(ob){
			ob->move(this_object());
			if(ob->query_item_type() != "armor")
				this_object()->wield(ob);
			else
				this_object()->wear(ob);
		}
	}
	boss_skills=(["30/60":"b_sanqianyuanhun","60/180":"b_youhunfushen","10/10":"b_yanluozhan",]);
	setup_npc();
	set_heart_beat(1);
}
string query_words(){
	string s = ::query_words();
	s += TASKD->query_words(this_player(),this_object());
	return s;
}
string query_links(void|int count){
	return ::query_links(count);
}
void fight_die(){
	::fight_die();
}
