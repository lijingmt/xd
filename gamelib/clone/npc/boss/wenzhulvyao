#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit GAMELIB_NPC;
void create(){
	name=object_name(this_object());
	_boss=1;
	_flushtime=3600;
	name_cn="文竹绿妖";
	desc="竹妖修炼而成，形为一绿衫少年\n";
	set_raceId("third");
	set_profeId("humanlike");
	picture="wenzhulvyao";
	_npcLevel=20;
	set_base_dex(40);
	set_base_str(100);
	set_base_life(40000);
	this_object()->query_life_max();
	set_base_baoji(4);
	set_base_hitte(85);
	set_base_dodge(4);
	array(string) equip_list=({"bossdrop/19bizhutouhuan","bossdrop/19bizhuchangku",});
	foreach(equip_list,string equip){
		object ob=clone(ITEM_PATH+equip);
		if(ob){
			ob->move(this_object());
			if(ob->query_item_type() != "armor")
				this_object()->wield(ob);
			else
				this_object()->wear(ob);
		}
	}
	boss_skills=(["60/60":"b_zhubiancisha","180/180":"b_zhujianbiri",]);
	setup_npc();
	set_heart_beat(1);
}
string query_words(){
	string s = ::query_words();
	s += TASKD->query_words(this_player(),this_object());
	return s;
}
string query_links(void|int count){
	return ::query_links(count);
}
void fight_die(){
	::fight_die();
}
