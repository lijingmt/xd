#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit GAMELIB_NPC;
void create(){
	name=object_name(this_object());
	_boss=1;
	_flushtime=36000;
	name_cn="【离三界】蛇年年兽";
	desc="头长触角，凶残异常，虽然看得到，但摸不到，非常难对付。需要离三界境界才能降服。\n";
	set_raceId("third");
	set_profeId("fish");
	picture="nianshou";
	_npcLevel=100;
	set_base_think(30000);
	set_base_dex(2000);//降低闪避
	set_base_str(7000);
	set_base_life(10000000000000000);
	this_object()->query_life_max();
	set_base_baoji(1000);
	set_base_hitte(2000);
	set_base_dodge(1000);//降低闪避
	setup_npc();
	set_heart_beat(1);
}
string query_words(){
	string s = ::query_words();
	s += TASKD->query_words(this_player(),this_object());
	return s;
}
string query_links(void|int count){
	return ::query_links(count);
}
void fight_die(){
	::fight_die();
}
