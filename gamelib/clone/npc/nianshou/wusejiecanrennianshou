#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit GAMELIB_NPC;
void create(){
	name=object_name(this_object());
	_boss=1;
	_flushtime=36000;
	name_cn="【无色界】残忍年兽";
	desc="头长触角，凶残异常，虽然看得到，但摸不到，非常难对付。需要天人境界才能降服。\n";
	set_raceId("third");
	set_profeId("fish");
	picture="nianshou";
	_npcLevel=100;
	set_base_think(300);
	set_base_dex(20);//降低闪避
	set_base_str(70);
	set_base_life(10000000);
	this_object()->query_life_max();
	set_base_baoji(8);
	set_base_hitte(20);
	set_base_dodge(2);//降低闪避
	set_all_mofa_defend_add(50);
	setup_npc();
	set_heart_beat(1);
}
string query_words(){
	string s = ::query_words();
	s += TASKD->query_words(this_player(),this_object());
	return s;
}
string query_links(void|int count){
	return ::query_links(count);
}
void fight_die(){
	::fight_die();
}
