			write("密码验证错误。\n");
			write("请输入您的原帐号密码\n");
			write("[string:check_password ...]\n");
			write("[返回:look]\n");
		}
		else
		{
			int flag = 1;
			for(int i=0;i<sizeof(password);i++)
			{
				if( password[i]>='a'&&password[i]<='z'||password[i]>='A'&&password[i]<='Z'||password[i]>='0'&&password[i]<='9')
				{
					;	
				}
				else
				{
					flag = 0;
				}
			}
			if(flag)
			{
				if(me->password==password)
					me->command("set_password");
				else
				{
					write("密码验证错误。\n");
					write("请输入您的原帐号密码\n");
					write("[string:check_password ...]\n");
					write("[返回:look]\n");
				}
			}
			else
