//add by calvin : 纪录日独立用户
int reguser(string arg)
{
	string webdir = "/usr/local/data/uniq_user/"+GAME_NAME_S+".";
	if(!arg)
	{
		return 1;
	}
	else
	{
		string s_mon,s_day;                                                                           
		int year,mon,day=0;                                                                                    
		mapping now_time = localtime(time());                                                                     
		mon = now_time["mon"]+1;                                                                                  
		day = now_time["mday"];                                                                                   
		year = now_time["year"]+1900;
		if(mon<10)                                                                                                
			s_mon = "0"+mon;                                                                                  
		else                                                                                                      
			s_mon = (string)mon;                                                                              
		if(day<10)                                                                                                
			s_day = "0"+day;                                                                                  
		else                                                                                                      
			s_day = (string)day;

		string logdate = "";
		logdate += year+s_mon+s_day;

		Stdio.append_file(webdir+logdate+".txt",arg+"\n");
	}
	return 1;
}
