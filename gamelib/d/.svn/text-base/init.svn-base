int tieToMobile(string arg)
{
	object me=this_player();
	if(me->mobile && me->mobile != "")
	{
		write("您的帐号已经绑定，不能重复进行绑定操作，如需取消，请联系客服010-58621742.\n");
		write("[进入游戏:start]\n");
		write("[返回:look]\n");
	}
	else{
		if(!arg)
		{
			write("帐号一旦与手机号码绑定，用户将不能更改绑定信息。如需解除绑定，请致电客服:010-58621742\n\n");
			write("请输入本帐号要绑定的手机号码:\n");
			write("[string:tieToMobile ...]\n");
			write("[返回:look]\n");
		}
		else{
			string mobile=arg;
			string desc=check_mobile(mobile);
			if(""!=desc)
			{
				write(desc);
				write("[重新输入:tieToMobile]\n");
				write("[返回:look]\n");
			}
			else{     
				write("确认要将你的帐号与号码"+mobile+"绑定吗？\n");
				write("[确认:tie_yes "+arg+"]\n");
				write("[重新输入:tieToMobile]\n");
				write("[返回:look]\n");
			}
		}
	}
	return 1;
}

