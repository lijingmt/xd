			write("请输入您的原帐号密码\n");
			write("[string:check_password ...]\n");
			write("[返回:look]\n");
		}
	}
	else{
		string password=arg;
		if(sizeof(password)<2||sizeof(password)>=12)
		{
			//格式不对
			write("密码验证错误。\n");
			write("请输入您的原帐号密码\n");
			write("[string:check_password ...]\n");
			write("[返回:look]\n");
		}
