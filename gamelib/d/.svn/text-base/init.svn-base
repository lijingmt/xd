string check_mobile(string str)
{
	string desc="";
	if(sizeof(str) == 0 || ""==str){
		desc += "手机号码不能为空\n";
	}
	else
	{
		if(sizeof(str)!=11)
		{
			desc += "你输入的手机号码位数不正确\n";
		}
		else{
			if((str[0]=='1')&&(str[1]=='3'||str[1]=='5'))
			{
				for(int i=2;i<11;i++)
				{
					if(!(str[i]>='0'&&str[i]<='9'))
					{
						desc += "请输入正确的手机号码\n";
						return desc;
					}		
				}
			}
			else
			{
				desc += "请输入正确的手机号码\n";
				return desc;
			}

		}
	}
	return desc;
}

int check_password(string arg){
