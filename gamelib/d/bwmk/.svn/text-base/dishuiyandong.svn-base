#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ROOM;
int clear = 0;
void create(){
	name=object_name(this_object());
	set_room_type("fb");
	name_cn="滴水岩洞";
	desc="\n";
	add_items(({ROOT "/gamelib/clone/npc/bwmk/bawangbaoqingwei"}));
	add_items(({ROOT "/gamelib/clone/npc/bwmk/jingweijunbingzu"}));
	add_items(({ROOT "/gamelib/clone/npc/bwmk/bawangbaoyinwei"}));
	add_items(({ROOT "/gamelib/clone/npc/bwmk/jingweijunduizhang"}));
}
string query_links(){
	object player=this_player();
	string tmp="";
	tmp += "[去往滴水岩洞口:fb_entry bawangmoku 2 1]\n";
	if(check_if_clear() == 1)
		tmp += "[去往青苔滑路:fb_entry bawangmoku 4 1]\n";
	else
		tmp += "去往青苔滑路\n";
	return tmp;
}
int check_if_clear(){
	if(clear == 1)
		return 1;
	array(object) all_obj = all_inventory(this_object());
	foreach(all_obj,object ob){
		if(ob->is("npc")){
			clear = 0;
			break;
		}
		else
			clear = 1;
	}
	return clear;
}