#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ROOM;
string room_race="third";
static int room_level=10000;
array(string) flush_monst = ({"",});
array(string) flush_human = ({"",});
void create(){
	name=object_name(this_object());
	set_room_type("city");
	name_cn="送子巷";
	desc="\n";
	set_belong_to("chaogecheng");
	exits["east"]=ROOT "/gamelib/d/chaogecheng/wumanlou";
	exits["west"]=ROOT "/gamelib/d/chaogecheng/chaoshengdalu";
	string tmp_s = CITYD->query_captured("chaogecheng");
	if(tmp_s == "monst"){
		room_race="monst";
		name_cn += "(妖魔占领)";
		guarded_exits["east"]="jushoubing";
		add_items(({ROOT "/gamelib/clone/npc/chaogecheng/jushoubing"}));
		foreach(flush_monst,string item){
			if(item && sizeof(item))
				add_items(({ROOT "/gamelib/clone/npc/"+item}));
		}
	}
	else if(tmp_s == "human"){
		room_race="human";
		name_cn += "(人类占领)";
		foreach(flush_human,string item){
			if(item && sizeof(item))
				add_items(({ROOT "/gamelib/clone/npc/"+item}));
		}
	}
}
