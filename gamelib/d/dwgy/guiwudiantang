#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ROOM;
int clear = 0;
void create(){
	name=object_name(this_object());
	set_room_type("fb");
	name_cn="¹íÎíµîÌÃ";
	desc="\n";
	add_items(({ROOT "/gamelib/clone/npc/dwgy/yuanhunshizhe26"}));
	add_items(({ROOT "/gamelib/clone/npc/dwgy/huoyanniao27"}));
	add_items(({ROOT "/gamelib/clone/npc/dwgy/qingmianniao28"}));
	add_items(({ROOT "/gamelib/clone/npc/dwgy/guitoujiang29"}));
}
string query_links(){
	object player=this_player();
	string tmp="";
	tmp += "[È¥ÍùÇß¶¾³¤ÀÈ:fb_entry duwuguiyu 1 1]\n";
	if(check_if_clear() == 1)
		tmp += "[È¥Íù¶ñ¹í¼àÀÎ:fb_entry duwuguiyu 3 1]\n";
	else
			tmp +="È¥Íù¶ñ¹í¼àÀÎ\n";
	return tmp;
}
int check_if_clear(){
	if(clear == 1)
		return 1;
	array(object) all_obj = all_inventory(this_object());
	foreach(all_obj,object ob){
		if(ob->is("npc")){
			clear = 0;
			break;
		}
		else
			clear = 1;
	}
	return clear;
}