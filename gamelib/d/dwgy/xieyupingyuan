#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ROOM;
int clear = 0;
void create(){
	name=object_name(this_object());
	set_room_type("fb");
	name_cn="血雨平原";
	desc="\n";
	add_items(({ROOT "/gamelib/clone/npc/dwgy/guitoujiang29"}));
	add_items(({ROOT "/gamelib/clone/npc/dwgy/sanhunshi30"}));
	add_items(({ROOT "/gamelib/clone/npc/dwgy/yulinguibu31"}));
	add_items(({ROOT "/gamelib/clone/npc/dwgy/youguishi32"}));
}
string query_links(){
	object player=this_player();
	string tmp="";
	tmp += "[去往鬼雾领域:fb_entry duwuguiyu 16 1]\n";
	if(check_if_clear() == 1)
		tmp += "[去往鬼王洞:fb_entry duwuguiyu 18 1]\n";
	else
			tmp +="去往鬼王洞\n";
	return tmp;
}
int check_if_clear(){
	if(clear == 1)
		return 1;
	array(object) all_obj = all_inventory(this_object());
	foreach(all_obj,object ob){
		if(ob->is("npc")){
			clear = 0;
			break;
		}
		else
			clear = 1;
	}
	return clear;
}