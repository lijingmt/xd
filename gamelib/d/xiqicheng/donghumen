#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ROOM;
string room_race="third";
static int room_level=10000;
array(string) flush_monst = ({"xiqicheng/mojunshizu","xiqicheng/mojunshizu",});
array(string) flush_human = ({"xiqicheng/jingweiduishibing","xiqicheng/jingweiduishibing",});
void create(){
	name=object_name(this_object());
	set_room_type("city");
	name_cn="东虎门";
	desc="\n";
	set_belong_to("xiqicheng");
	exits["east"]=ROOT "/gamelib/d/xiqicheng/fulinjie";
	exits["west"]=ROOT "/gamelib/d/xiqicheng/shisangongqiao";
	string tmp_s = CITYD->query_captured("xiqicheng");
	if(tmp_s == "monst"){
		room_race="monst";
		name_cn += "(妖魔占领)";
		guarded_exits["west"]="jushoubing";
		add_items(({ROOT "/gamelib/clone/npc/xiqicheng/jushoubing"}));
		foreach(flush_monst,string item){
			if(item && sizeof(item))
				add_items(({ROOT "/gamelib/clone/npc/"+item}));
		}
	}
	else if(tmp_s == "human"){
		room_race="human";
		name_cn += "(人类占领)";
		guarded_exits["west"]="zhongjiamenwei";
		add_items(({ROOT "/gamelib/clone/npc/xiqicheng/zhongjiamenwei"}));
		foreach(flush_human,string item){
			if(item && sizeof(item))
				add_items(({ROOT "/gamelib/clone/npc/"+item}));
		}
	}
}
