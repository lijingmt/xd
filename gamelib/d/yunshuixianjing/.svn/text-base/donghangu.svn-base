#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_ROOM;
int clear = 0;
void create(){
	name=object_name(this_object());
	set_room_type("fb");
	name_cn="冬寒谷";
	desc="\n";
	add_items(({ROOT "/gamelib/clone/npc/yunshuixianjing/hualuyaojing65"}));
	add_items(({ROOT "/gamelib/clone/npc/yunshuixianjing/wucaidiejing65"}));
	add_items(({ROOT "/gamelib/clone/npc/yunshuixianjing/zhimanguai65"}));
	add_items(({ROOT "/gamelib/clone/npc/yunshuixianjing/tunhaiyao65"}));
	add_items(({ROOT "/gamelib/clone/npc/yunshuixianjing/tuyunyao65"}));
	add_items(({ROOT "/gamelib/clone/npc/yunshuixianjing/wushuiyaojing65"}));
	add_items(({ROOT "/gamelib/clone/npc/boss/luojindiexian"}));
}
string query_links(){
	object player=this_player();
	string tmp="";
	tmp += "[去往翻云海:fb_entry yunshuixianjing 4 1]\n";
	if(check_if_clear() == 1)
		tmp += "[去往飘忽小路:fb_entry yunshuixianjing 6 1]\n";
	else
		tmp += "去往飘忽小路\n";
	return tmp;
}
int check_if_clear(){
	if(clear == 1)
		return 1;
	array(object) all_obj = all_inventory(this_object());
	foreach(all_obj,object ob){
		if(ob->is("npc")){
			clear = 0;
			break;
		}
		else
			clear = 1;
	}
	return clear;
}