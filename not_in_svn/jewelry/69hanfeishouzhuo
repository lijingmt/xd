#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_JEWELRY;
void create(){
	name=object_name(this_object());
	name_cn="【晶】寒飞手镯";
	unit="个";
	picture=name;
	desc="一份小小的圣诞礼物~\n";
	item_cur_dura=10000;
	item_dura=10000;
	set_item_type("jewelry");
	set_item_kind("jewelry_bangle");
	set_item_only(1);
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(0);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_item_canLevel(69);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("yushi");
	set_item_profeLimit("zhuxian");
	set_item_profeLimit("kuangyao");
	set_item_profeLimit("wuyao");
	set_item_profeLimit("yinggui");
	set_str_add(45);
	set_dex_add(45);
	set_think_add(45);
	set_doub_add(3);
	set_hitte_add(3);
	set_lunck_add(60);
	set_bingshuang_defend_add(35);
}
