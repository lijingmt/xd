#include <globals.h>
#include <gamelib/include/gamelib.h>
inherit WAP_WEAPON;
void create(){
	name=object_name(this_object());
	name_cn="【雪】雪月神剑";
	unit="把";
	picture=name;
	desc="一份小小的圣诞礼物~\n";
	item_cur_dura=1500;
	item_dura=1500;
	set_item_type("single_weapon");
	set_item_weapon_type("jian");
	set_item_kind("single_main_weapon");
	set_item_only(1);
	set_item_canEquip(1);
	set_item_canDrop(1);
	set_item_canGet(1);
	set_item_canTrade(0);
	set_item_canSend(1);
	set_item_canStorage(1);
	set_attack_power(80);
	set_attack_power_limit(140);
	set_speed_power(3);
	set_item_canLevel(49);
	set_item_profeLimit("jianxian");
	set_item_profeLimit("zhuxian");
	set_item_profeLimit("kuangyao");
	set_item_profeLimit("yinggui");
	if(query_item_kind()=="single_main_weapon")
		desc+="(主手)\n";
	else if(query_item_kind()=="single_other_weapon")
		desc+="(副手)\n";
	else if(query_item_kind()=="double_main_weapon")
		desc+="(双手)\n";
	set_str_add(12);
	set_dex_add(24);
	set_think_add(12);
	set_weapon_attack_add(6);
	set_attack_bingshuang_add(24);
	set_aocao_max("red",1);
	set_aocao_max("yellow",1);
}
